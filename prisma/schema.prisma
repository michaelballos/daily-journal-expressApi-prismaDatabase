// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique  
  password String 
  avatar String
  journalEntry JournalEntry[] 
  todos Todo[]
  tokens Token[]
}  

model JournalEntry {
  id Int @id @default(autoincrement())
  title String      
  entry String
  createdAt DateTime
  updatedAt DateTime
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Todo {
  id Int @id @default(autoincrement())
  title String
  todo String
  createdAt DateTime
  updatedAt DateTime
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Token {
  id Int @id @default(autoincrement())
  token String
  userId Int
  user User @relation(fields: [userId], references: [id])
}
