generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @default(cuid())
  firstName            String    
  lastName             String
  nickname             String
  fullName             String
  picture              String
  locale               String
  updatedAt            DateTime  @updatedAt
  email                String    @unique
  emailVerified        Boolean
  sub                  String    @unique
  idToken              String
  accessToken          String
  accessTokenScope     String
  accessTokenExpiresAt Int
  refreshToken         String?
  tokenType           String
  journalEntry JournalEntry[]
  todos        Todo[]
}

model JournalEntry {
  id        Int      @id @default(autoincrement())
  title     String
  userId    String
  createdAt DateTime
  entry     String
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  userId    String
  createdAt DateTime
  todo      String
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}
